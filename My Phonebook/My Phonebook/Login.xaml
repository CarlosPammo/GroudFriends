<Window x:Class="My_Phonebook.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="User" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="10" Height="30" KeyDown="Consulta"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Passwork" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="10" Height="30" KeyDown="Consulta"/>

        </Grid>
        <Grid Grid.Row="2">
            <Button x:Name="Btnaceptar" Height="30" Margin="33,30,157,29" Content="Aceptar" Click="BtnNew_Click" />
            <Button x:Name="Btncancelar" Height="30" Margin="164,30,29,29" Content="Cancelar" Click="BtnNew_Click" />

        </Grid>
    </Grid>
</Window>
